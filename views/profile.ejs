<% include ./partials/header.ejs %>
This is the profile page.. 
<br>

 <% if (currentUser) {%>

	<%= 'Hey ' %><%= currentUser.local.firstName %><%= '! check out the businesses you have saved to your profile!' %>

<% } %>

<div class="container-fluid">
	<% for(var i = 0; i < currentUser.local.userList.length; i++) { %>
		<div class="row business">
			<div class='col-md-10 col-md-offset-1'>
				<div class='panel panel-default'>
					<div class='panel-body'>
						<div class="row">
							<div class="col-xs-12 col-md-3 col-lg-3 thumbnail">
								<img src="<%= currentUser.local.userList[i].businessImageURL %>">
							</div>
							<div class='col-md-9 col-xs-12'>
								<ul class='list-group'>
									<li class='list-group-item'>
										<h4 class='inline-header'>Business Name:</h4>
										<span class='business-name'> <%= currentUser.local.userList[i].businessName %> </span>
									</li>
									<li class='list-group-item'>
										<h4 class='inline-header'>Business Address:</h4>
										<span class='business-address'> <%= currentUser.local.userList[i].businessAddress %> </span>
									</li>
									<li class='list-group-item'>
										<h4 class='inline-header'>Yelp Link:</h4>
										<span class='business-yelp-link'><a href= '<%= currentUser.local.userList[i].businessYelpURL %>' > <%= currentUser.local.userList[i].businessName %> </a></span>
									</li>
									<li class='list-group-item'>
										<h4 class='inline-header'>There Again:</h4>
										<span class='there-again'> <%= currentUser.local.userList[i].thereAgain %> </span>
									</li>
								</ul>
							</div>
						</div>
					</div>
					<div class='panel-footer'>
						<button class='btn btn-warning edit'>Edit</button>
						<button class='btn btn-danger delete'>Delete</button>
					</div>
				</div>
			</div>
		</div>
	<% } %>
</div>

<% include ./partials/footer.ejs %>